#!/usr/bin/env bash
###################
## BASH Defaults ##
###################
export BASH_SILENCE_DEPRECATION_WARNING=1
export EDITOR='vim'
export HISTCONTROL=ignoredups:erasedups # no duplicate entries
export HISTSIZE=100000                  # big big history
export HISTFILESIZE=100000              # big big history
export HISTTIMEFORMAT=$(echo -e "\033[1;30m%F \033[1;30m%T \033[0m")

# Prompt Variables
# export PROMPT_COMMAND='__git_ps1 "\n\t - \w\n[\[\033[38;5;201m\]\u\[\033[0m\]@\[\033[38;5;87m\]\h\[\033[0m\]]" "\\$ "'
# export PROMPT_COMMAND='eval __git_ps1 "${PS1}"'
# export PROMPT_COMMAND="history -a;${PROMPT_COMMAND}"
# '\n\t - \w\n[\033[38;5;201m\u\e[0m@\033[38;5;87m\h\e[0m]\\$ '
#######################
## Colored Man Pages ##
#######################
export LESS_TERMCAP_mb=$(printf '\e[01;31m') # enter blinking mode – red
export LESS_TERMCAP_md=$(printf '\e[01;35m') # enter double-bright mode – bold, magenta
export LESS_TERMCAP_me=$(printf '\e[0m')     # turn off all appearance modes (mb, md, so, us)
export LESS_TERMCAP_se=$(printf '\e[0m')     # leave standout mode
export LESS_TERMCAP_so=$(printf '\e[01;33m') # enter standout mode – yellow
export LESS_TERMCAP_ue=$(printf '\e[0m')     # leave underline mode
export LESS_TERMCAP_us=$(printf '\e[04;36m') # enter underline mode – cyan

########################
## Misc Env Variables ##
########################
export LPASS_AGENT_TIMEOUT=0
export BREW_PREFIX="$(brew --prefix)"
export HOMEBREW_GITHUB_API_TOKEN='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'
export HOMEBREW_NO_ENV_HINTS=true
export CPPFLAGS="-I${BREW_PREFIX}/opt/openssl/include"
export CPPFLAGS+="-I${BREW_PREFIX}/opt/openjdk/include"
export LDFLAGS+="-L${BREW_PREFIX}/opt/openssl/lib"
export OPS_SCRIPTS_DIR="/Users/bbrinkerhoff/repos/tools/ops/scripts"

#############
## GIT PS1 ##
#############
export GIT_PS1_SHOWCOLORHINTS=true
export GIT_PS1_SHOWDIRTYSTATE=true
export GIT_PS1_SHOWUNTRACKEDFILES=true

# OLD SCHOOL PS1
export PS1='\n\t - \w\n[\[\033[38;5;201m\]\u\[\e[0m\]@\[\033[38;5;87m\]\h\[\e[0m\]]$(__git_ps1 " (%s)")\\$ '
# export PS1='\n\t - \w\n[\033[38;5;201m\u\e[0m@\033[38;5;87m\h\e[0m]\\$ '
# export PS1='\n\[\e[206m\]\T\[\e[m\] - \[\e[34m\]\w\[\e[m\]\n\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\[\033[00m\]\[\033[31m\]$(__git_ps1)\[\033[00m\]\$ '
#export PS1='\n\[\e[206m\]\T\[\e[m\] - \[\e[34m\]\w\[\e[m\]\n\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\[\033[31m\]$(__git_ps1)\[\033[00m\]\$ '
# export PS1='\n\[\e[206m\]\T\[\e[m\] - \[\e[34m\]\w\[\e[m\]\n\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\[\033[00m\]\[\033[31m\]\[\033[00m\]\$ '
# export PROMPT_COMMAND='__git_ps1 "\n\[\e[206m\]\T\[\e[m\] - \[\e[34m\]\w\[\e[m\]\n\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\[\033[00m\]" "\[\033[31m\]\[\033[00m\]\\\$ "'
# export PROMPT_COMMAND='__git_ps1 "\n\[\e[206m\]\T\[\e[m\] - \[\e[34m\]\w\[\e[m\]\n\[\033[01;32m\]\u@\h\[\033[00m\]:" "\\\$ "'
# export PROMPT_COMMAND="__git_ps1 '("%s")'"
# export PROMPT_COMMAND='__git_ps1 "\u@\h:\w" "\\\$ "'

###########
## PYENV ##
###########
export PYENV_ROOT="$HOME/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init - bash)"

###############
## LS Colors ##
###############
export CLICOLOR=1
if ls --color > /dev/null 2>&1 # GNU `ls`
then
  colorflag="--color"
  export LS_COLORS='rs=0:di=1;34:ln=1;36:mh=00:pi=40;33:so=1;35:do=1;35:bd=40;33;1:cd=40;33;1:or=40;31;1:mi=00:su=37;41:sg=30;43:ca=00:tw=30;42:ow=34;42:st=37;44:ex=1;32:*.tar=1;31:*.tgz=1;31:*.tbz=1;31:*.tbz2=1;31:*.zip=1;31:*.gz=1;31:*.bz2=1;31:*.xz=1;31:*.zst=1;31:*.7z=1;31:*.rar=1;31:*.dmg=1;31:*.pkg=1;31:*.app=1;31:*.jar=1;31:*.war=1;31:*.heic=1;35:*.heif=1;35:*.avif=1;35:*.jpg=1;35:*.jpeg=1;35:*.png=1;35:*.gif=1;35:*.bmp=1;35:*.tif=1;35:*.tiff=1;35:*.svg=1;35:*.webp=1;35:*.ico=1;35:*.psd=1;35:*.ai=1;35:*.mov=1;35:*.mp4=1;35:*.m4v=1;35:*.mkv=1;35:*.webm=1;35:*.avi=1;35:*.mpg=1;35:*.mpeg=1;35:*.wmv=1;35:*.flv=1;35:*.m4a=00;36:*.aac=00;36:*.mp3=00;36:*.flac=00;36:*.wav=00;36:*.aiff=00;36:*.ogg=00;36:*.opus=00;36:*.wma=00;36:*.caf=00;36:*.pages=1;33:*.numbers=1;33:*.key=1;33:*.doc=1;33:*.docx=1;33:*.xls=1;33:*.xlsx=1;33:*.ppt=1;33:*.pptx=1;33:*.pdf=1;33:*.md=1;33:*.txt=1;33:*.rtf=1;33:*.json=1;33:*.xml=1;33:*.yml=1;33:*.yaml=1;33:*.log=00;90:*~=00;90:*#=00;90:*.bak=00;90:*.old=00;90:*.orig=00;90:*.swp=00;90:*.swo=00;90:*.tmp=00;90:*.temp=00;90:*.cache=00;90:*.DS_Store=00;90:*.localized=00;90:*.Trash=00;90:*.dmg.download=00;90:*.part=00;90:*.crdownload=00;90:*.download=00;90:'
else # macOS `ls`
  colorflag="-G"
  export LSCOLORS="ExGxFxdaCxDaDahbadacec"
