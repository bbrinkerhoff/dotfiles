#!/usr/bin/env bash
##################################################
################## GIT ALIASES ###################
##################################################
# Basic Aliases
alias gb='git branch'
alias gc='git checkout'
alias gd='git diff'
alias gp='git pull'
alias gs='git status'
alias gpm='git pull origin master'
