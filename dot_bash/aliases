alias c7Fix='echo "sed -i '\''s/mirror.centos.org/vault.centos.org/g;s/^#.*baseurl=http/baseurl=http/g;s/^mirrorlist=http/#mirrorlist=http/g'\'' /etc/yum.repos.d/*.repo"|pbcopy'
