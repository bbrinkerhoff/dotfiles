# Checkout Aliases
alias gcm='git checkout master'
alias gcb='git checkout bbrinkerhoff'
alias gcbd='git checkout bbrinkerhoff_$(tdate)'
# Branch Aliases
alias gbd='pruneGitBranches'
alias gbD='pruneGitBranches all'
alias gnb='git checkout master && git checkout -b'
alias gnbd='git checkout master && git checkout -b bbrinkerhoff_$(tdate)'
# Fixing Aliases
alias gbre='git fetch origin; git reset --hard origin/master'
alias gre='git reset --hard origin/master'
alias gfix='find . -type f | xargs grep -l "<<<<<<<" | xargs git checkout --theirs'
# Other Aliases
