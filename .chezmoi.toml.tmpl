{{- $email := promptStringOnce . "email" "Email" -}}
{{- $fullName := promptStringOnce . "fullName" "Full Name" -}}
{{- $autoCommit := promptBoolOnce . "autoCommit" "Enable chezmoi auto-commit/auto-update (true/false)" -}}

[data]
    email = "{{ $email }}"
    fullName = "{{ $fullName }}"
    autoCommit = {{ $autoCommit }}

[git]
    autoCommit = {{ $autoCommit }}
    autoPush = {{ $autoCommit }}

[onepassword]
    command = "op"